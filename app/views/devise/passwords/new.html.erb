<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-field w-input"  %>
  </div>

  <div class="actions devise-actions">
    <%= f.submit "Send me reset password instructions", class: "button w-button" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
